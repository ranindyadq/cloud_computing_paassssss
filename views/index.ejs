<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kelompok 5 Cloud Computing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-primary">
        <div class="container d-flex align-items-center">
            <img src="/images/logo1.png" alt="Logo 1" class="logo me-2">
            <img src="/images/logo2.png" alt="Logo 2" class="logo me-3">
            <a class="navbar-brand" href="/">Kelompok 5 Cloud Computing</a>
            <a href="/users/add" class="btn btn-light ms-auto">Tambah Anggota</a>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Daftar Angggota Kelompok</h2>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Email</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length === 0) { %>
                    <tr>
                        <td colspan="4" class="text-center text-muted">Belum ada anggota.</td>
                    </tr>
                <% } %>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/users/edit/<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/users/delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="<%= user.id %>">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus?')">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Teknologi Informasi Universitas Brawijaya | Dibuat Oleh Kelompok 5 Cloud Computing</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
